# Common
NODE_ENV=development
PORT=4000
CLIENT_URL=http://localhost:5173
API_URL=http://localhost:4000

# Mongo
MONGODB_URI=mongodb://localhost:27017/physics_school

# Auth
JWT_ACCESS_SECRET=replace_with_strong_random_key_here_make_it_long_and_secure
JWT_REFRESH_SECRET=replace_with_another_strong_random_key_here_different_from_access
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=30d
EMAIL_VERIFICATION_REQUIRED=false

# SMTP (dev can use Ethereal)
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_USER=ethereal_user
SMTP_PASS=ethereal_pass
EMAIL_FROM="Physics School <no-reply@school.local>"

# Payments
PAYMENT_PROVIDER=mock   # mock | qpay
QPAY_MERCHANT_ID=
QPAY_API_KEY=
QPAY_API_BASE=https://api.qpay.mn  # adjust if different
PAYMENT_WEBHOOK_SECRET=replace_me_with_webhook_secret

# Feature Flags
ENABLE_SUBSCRIPTIONS=true
RETEST_INTERVAL_DAYS=14
RETEST_AFTER_N_LESSONS=8
RECOMMENDATION_COUNT=6
